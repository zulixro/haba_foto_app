<div class="cover-container">
  <%= image_tag("haba_logo.jpg", class: "cover") %>

  <div class="cover">
    <%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
      <div class="field">
        <%= f.email_field :email, value: Rails.application.credentials.admin_user[:email], class: "hide" %>
      </div>

      <div class="field cover">
        <%= f.password_field :password, placeholder: "podaj hasło", class: "cover" %>
      </div>

      <div class="actions">
        <%= f.submit("Wejdź", hidden: true) %>
      </div>
    <% end %>
  </div>
</div>
